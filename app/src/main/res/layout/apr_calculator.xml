<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Amount Borrowed" />
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/amountBorrowed"
		android:hint="Amount Borrowed"
		android:inputType="numberDecimal" />
	
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Number of Payments" />
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/numberOfPayments"
		android:hint="Number of Payments"
		android:inputType="number" />
		
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Costs" />
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/costs"
		android:hint="Costs"
		android:inputType="numberDecimal" />
	
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Base Rate" />
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/baseRate"
		android:hint="Base Rate ex. 5.5"
		android:inputType="numberDecimal" />
	
	<Button
		android:id="@+id/submit"
		android:text="Submit"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>

</LinearLayout>
</ScrollView>
