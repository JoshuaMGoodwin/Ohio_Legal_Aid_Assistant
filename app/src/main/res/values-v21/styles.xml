<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/default_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="actionMenuTextColor">#ffffffff</item>
    </style>
    <style name="small_fab_lollipop">
        <item name="android:padding">@dimen/small_button_padding</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:background">@drawable/oval_ripple</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_width">@dimen/fab_diameter</item>
        <item name="android:layout_height">@dimen/fab_diameter</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:stateListAnimator">@anim/button_elevation</item>
    </style>
</resources>
